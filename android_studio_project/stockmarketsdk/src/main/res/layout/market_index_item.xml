<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Index Info Section (Left) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/indexName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S&amp;P 500"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/indexSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPX"
            android:textColor="#757575"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Value Section (Center) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/indexValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12,985.22"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USD"
            android:textColor="#757575"
            android:textSize="10sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="1dp" />
    </LinearLayout>

    <!-- Change Section (Right) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:background="@drawable/change_background_negative"
        android:padding="8dp"
        android:minWidth="70dp">

        <TextView
            android:id="@+id/changeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-0.03%"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />

        <TextView
            android:id="@+id/changeAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â–¼ -3.85"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_marginTop="2dp" />
    </LinearLayout>

</LinearLayout>
